<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Auto Post Discord</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-dark text-light">

<div class="container mt-5">
  <h1 class="mb-4">ðŸ“– Auto Post Discord</h1>

  <% if (messages.error) { %>
    <div class="alert alert-danger"><%= messages.error %></div>
  <% } %>
  <% if (messages.success) { %>
    <div class="alert alert-success"><%= messages.success %></div>
  <% } %>
  <% if (messages.info) { %>
    <div class="alert alert-info"><%= messages.info %></div>
  <% } %>

  <!-- Config -->
  <div class="card bg-secondary mb-3">
    <div class="card-header">Config</div>
    <div class="card-body">
      <form method="POST" action="/save-config">
        <div class="mb-3">
          <label class="form-label">Token</label>
          <input type="text" name="token" value="<%= config.token %>" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary">Save Token</button>
      </form>
    </div>
  </div>

  <!-- Status -->
  <div class="card bg-secondary mb-3">
    <div class="card-header">Status</div>
    <div class="card-body">
      <p>Auto Post: 
        <% if (postingAlive) { %>
          <span class="badge bg-success">Running</span>
        <% } else { %>
          <span class="badge bg-danger">Stopped</span>
        <% } %>
      </p>
      <form method="POST" action="/start" style="display:inline-block;">
        <button type="submit" class="btn btn-success">Start</button>
      </form>
      <form method="POST" action="/stop" style="display:inline-block;">
        <button type="submit" class="btn btn-danger">Stop</button>
      </form>
    </div>
  </div>

  <!-- Channel List -->
  <div class="card bg-secondary mb-3">
    <div class="card-header">Channels Config</div>
    <div class="card-body">
      <% if (config.channels.length > 0) { %>
        <ul class="list-group mb-3">
          <% config.channels.forEach((ch, i) => { %>
            <li class="list-group-item bg-dark text-light">
              <strong><%= ch[0] %></strong> - Interval: <%= ch[2] || 30000 %>ms <br>
              Message: <code><%= ch[1] %></code>
              <div class="mt-2">
                <!-- Edit Button -->
                <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editModal<%= i %>">
                  Edit
                </button>

                <!-- Delete -->
                <form method="POST" action="/delete-channel/<%= i %>" class="d-inline">
                  <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
              </div>
            </li>

            <!-- Modal Edit -->
            <div class="modal fade" id="editModal<%= i %>" tabindex="-1">
              <div class="modal-dialog">
                <form method="POST" action="/update-channel/<%= i %>" class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title">Edit Channel <%= ch[0] %></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                  </div>
                  <div class="modal-body">
                    <div class="mb-3">
                      <label class="form-label">Channel ID</label>
                      <input type="text" name="id" value="<%= ch[0] %>" class="form-control" required>
                    </div>
                    <div class="mb-3">
                      <label class="form-label">Message</label>
                      <textarea name="message" class="form-control" rows="3" required><%= ch[1] %></textarea>
                    </div>
                    <div class="mb-3">
                      <label class="form-label">Interval (ms)</label>
                      <input type="number" name="interval" value="<%= ch[2] || 30000 %>" class="form-control">
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                  </div>
                </form>
              </div>
            </div>
          <% }) %>
        </ul>
      <% } else { %>
        <p>No channels configured.</p>
      <% } %>

      <!-- Add new channel -->
      <form method="POST" action="/add-channel">
        <div class="mb-3">
          <label class="form-label">Channel ID</label>
          <input type="text" name="id" class="form-control" required>
        </div>
        <div class="mb-3">
          <label class="form-label">Message</label>
          <textarea name="message" class="form-control" rows="3" required></textarea>
        </div>
        <div class="mb-3">
          <label class="form-label">Interval (ms)</label>
          <input type="number" name="interval" class="form-control" placeholder="30000">
        </div>
        <button type="submit" class="btn btn-primary">Add Channel</button>
      </form>
    </div>
  </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>